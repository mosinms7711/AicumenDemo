<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"             
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Aicumen Test"
             xmlns:local="clr-namespace:AicumenTest"
             xmlns:vm="clr-namespace:AicumenTest.ViewModels"
             x:Class="AicumenTest.MainPage"
             NavigationPage.HasNavigationBar="False">

    <Grid x:Name="MainContentGrid" RowSpacing="10" VerticalOptions="Start" BackgroundColor="BlueViolet">
        <StackLayout x:Name="MainLayout" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Button Text="Login with Facebook" Clicked="OnFBLoginClicked" TextColor="White" />
        </StackLayout>
    </Grid>
</ContentPage>
