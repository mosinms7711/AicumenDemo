<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"             
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Aicumen Test"
             xmlns:local="clr-namespace:AicumenTest"
             xmlns:vm="clr-namespace:AicumenTest.ViewModels"
             x:Class="AicumenTest.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout x:Name="MainLayout" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <StackLayout  HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
            <Image Source="logo.png" HeightRequest="300" WidthRequest="300" Margin="20,0,20,0"/>
        </StackLayout>
        <StackLayout  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Button Text="Login with Facebook" Clicked="OnFBLoginClicked" TextColor="White" />
        </StackLayout>
    </StackLayout>
</ContentPage>
