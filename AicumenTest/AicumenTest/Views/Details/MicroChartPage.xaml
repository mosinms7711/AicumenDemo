<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             xmlns:vm="clr-namespace:AicumenTest.ViewModels"            
             x:Class="AicumenTest.MicroChartPage">
    <ContentPage.BindingContext>
        <vm:TopCryptoListViewModel x:Name="TopCryptoListVM" x:FieldModifier="public" />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <forms:ChartView x:Name="PieChart" HeightRequest="250" WidthRequest="150"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>